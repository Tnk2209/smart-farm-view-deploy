# Server Configuration
PORT=3001
NODE_ENV=development

# PostgreSQL Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=smart_farm
DB_USER=postgres
DB_PASSWORD=yourpassword
DB_SSL=false

# MQTT Configuration
MQTT_BROKER_URL=mqtt://localhost:1883
# MQTT_BROKER_URL=mqtt://test.mosquitto.org:1883
MQTT_USERNAME=
MQTT_PASSWORD=

# ===== Option 1: Single Topic (backward compatible) =====
# Subscribe to one topic only - default if MQTT_TOPICS is not set
MQTT_TOPIC=smartfarm/telemetry/#

# ===== Option 2: Multiple Topics (recommended) =====
# Subscribe to multiple topics at once - comma-separated
# Uncomment and customize the line below to enable multiple topics
# MQTT_TOPICS=smartfarm/telemetry/#,smartfarm/alerts/#,smartfarm/commands/#,smartfarm/status/#

# Example: Subscribe to specific stations
# MQTT_TOPICS=smartfarm/telemetry/STATION001,smartfarm/telemetry/STATION002

# Example: Use wildcards for flexibility
# MQTT_TOPICS=smartfarm/+/data,smartfarm/alerts/#

# CORS
CORS_ORIGIN=http://localhost:5173

# API Configuration
API_PREFIX=/api

# JWT Authentication
JWT_SECRET=smart-farm-secret-key-change-in-production
JWT_EXPIRES_IN=24h
